{
  "uid": "app-overview",
  "title": "App Overview",
  "schemaVersion": 36,
  "version": 1,
  "editable": true,
  "graphTooltip": 0,
  "timezone": "browser",
  "refresh": "10s",
  "time": { "from": "now-5m", "to": "now" },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
    "time_options": ["5m", "15m", "30m", "1h", "3h", "6h", "12h", "24h"]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "DS_PROMETHEUS",
        "label": "Prometheus",
        "query": "prometheus",
        "current": {},
        "refresh": 1,
        "hide": 0
      }
    ]
  },
  "links": [],
  "panels": [
    {
      "type": "timeseries",
      "title": "User Request Rate (req/s)",
      "id": 1,
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(app_requests_total{endpoint!~\"/(metrics|health/.*)\"}[1m]))",
          "legendFormat": "requests"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "decimals": 3 },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "User 5xx Error Rate (%)",
      "id": 2,
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * sum(rate(app_requests_total{endpoint!~\"/(metrics|health/.*)\", http_status=~\"5..\"}[5m])) / sum(rate(app_requests_total{endpoint!~\"/(metrics|health/.*)\"}[5m]))",
          "legendFormat": "5xx %"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "decimals": 2 },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 }
    },
    {
      "type": "timeseries",
      "title": "p95 Latency (s) — User Traffic",
      "id": 3,
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by (le) (rate(app_request_latency_seconds_bucket{endpoint!~\"/(metrics|health/.*)\"}[5m])))",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s", "decimals": 3 },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 }
    },
    {
      "type": "timeseries",
      "title": "Top Endpoints by Traffic (req/s) — Top 1",
      "id": 4,
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(1, sum by (endpoint) (rate(app_requests_total{endpoint!~\"/(metrics|health/.*)\"}[1m])))",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "decimals": 3 },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 }
    },
    {
      "type": "timeseries",
      "title": "Internal Exceptions Rate (exceptions/s)",
      "id": 5,
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(app_errors_total[5m])",
          "legendFormat": "exceptions"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "none", "decimals": 3, "custom": { "displayName": "exceptions/s" } },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 32 }
    }
  ]
}
